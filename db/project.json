{
  "name": "db",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "db",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/db",
        "main": "db/index.ts",
        "tsConfig": "db/tsconfig.lib.json",
        "assets": []
      }
    },
    "generate": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "commands": ["drizzle-kit generate --config=./db/drizzle.config.ts"]
      }
    },
    "migrate": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "commands": ["drizzle-kit migrate --config=./db/drizzle.config.ts"]
      }
    }
  }
}
